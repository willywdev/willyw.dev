---
import Aboutme from "../components/AboutMe/Aboutme.astro";
import Contact from "../components/Contact/Contact.astro";
import Divider from "../components/Divider/Divider.astro";
import Projects from "../components/Projects/Projects.astro";
import Skills from "../components/Skills/Skills.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="willyw.dev">
  <main class="main">
    <h2 class="main__headlines-small">Projects</h2>
    <Projects />
    <Divider />
    <h2 class="main__headlines-small">Skills</h2>
    <Skills />
    <Divider />
    <h2 class="main__headlines-small">About me</h2>
    <Aboutme />
    <Divider />
    <h2 class="main__headlines-small">Contact me</h2>
    <div class="contact__wrapper">
      <Contact />
    </div>
    <Divider />
    <h2 class="main__headlines-small">Build with</h2>
  </main>
</Layout>

<style is:global>
  .contact__wrapper {
    display: flex;
    justify-content: center;
  }
</style>
