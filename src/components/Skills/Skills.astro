---
import Image from "astro/components/Image.astro";
import Astro_Build from "./icons/Astro-Build.svg";
import Bash_Dark from "./icons/Bash-Dark.svg";
import Bootstrap from "./icons/Bootstrap.svg";
---

<article class="skills__grid">
  <Image src={Astro_Build} alt="Astro" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bootstrap} alt="Bootstrap" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
  <Image src={Bash_Dark} alt="Bash" class="skills__icon" />
</article>

<style>
  .skills__grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 0.2rem;
    padding: 0 1rem;
  }
  .skills__icon {
    width: 54px;
    height: 54px;
  }
</style>
