---
const { image, link, title, description } = Astro.props;
import Image from "astro/components/Image.astro";
---

<li class="card">
  <a href={link} target="_blank" class="card__link">
    <Image class="project-image" src={image} alt={title} />
    <h2 class="card__title">
      {title}
      <span> &rarr;</span>
    </h2>
    <p class="card__description">{description}</p>
  </a>
  <slot />
</li>

<style>
  .card {
    margin: 0 1rem 1rem 1rem;
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    position: relative;
    max-width: 400px;
    min-width: 45%;
  }
  .card__link {
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .card__title {
    margin-top: 10px;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    padding: 0 1rem;
  }
  .card__description {
    margin-top: 0.2rem;
    margin-bottom: 3rem;
    padding: 0 1rem;
  }
  .card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .project-image {
    border-radius: 10px;
    height: auto;
    width: 100%;
    max-width: 450px;
    padding: 1rem 0.8rem;
  }

  @media screen and (min-width: 400px;) {
    .card {
      min-height: 385px;
      max-height: 385px;
    }
  }

  @media screen and (min-width: 1000px) {
    .card {
      max-height: 750px;
    }
  }
</style>
