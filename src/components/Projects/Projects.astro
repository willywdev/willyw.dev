---
import Card from "../Card/Card.astro";
import Tag from "../Tag/Tag.astro";
import projectData from "./data.js";
import linkster from "./images/linkster.png";
import linktrim from "./images/linktrim.png";
import css from "./svg/css3-original.svg";
import html from "./svg/html5-original.svg";
import javascript from "./svg/javascript-original.svg";
import reactSVG from "./svg/react-original.svg";
---

<ul role="list" class="projects__list">
  <Card
    image={linkster}
    link={projectData[0].link}
    title={projectData[0].title}
    description={projectData[0].description}>
    <div class="projects__bottom-bar">
      <ul class="projects__tags-list">
        <Tag name="React" img={reactSVG} />
        <Tag name="JavaScript" img={javascript} />
        <Tag name="CSS" img={css} />
      </ul>
      <a
        href={projectData[0].repo}
        class="projects__repo-button"
        target="_blank">See Code</a
      >
    </div>
  </Card>

  <Card
    image={linktrim}
    link={projectData[1].link}
    title={projectData[1].title}
    description={projectData[1].description}>
    <div class="projects__bottom-bar">
      <ul class="projects__tags-list">
        <Tag name="HTML" img={html} />
        <Tag name="JavaScript" img={javascript} />
        <Tag name="CSS" img={css} />
      </ul>
      <a
        href={projectData[1].repo}
        class="projects__repo-button"
        target="_blank">See Code</a
      >
    </div>
  </Card>
</ul>

<style>
  .projects__list {
    display: flex;
    flex-direction: column;
    padding: 0;
    justify-content: center;
    align-items: center;
  }
  .projects__bottom-bar {
    position: absolute;
    display: flex;
    bottom: 0.4rem;
    width: 100%;
    align-items: flex-end;
    justify-content: space-between;
    margin-left: 6px;
  }
  .projects__tags-list {
    display: flex;
    gap: 0.3rem;
    list-style-type: none;
    font-size: 0.7rem;
    width: fit-content;
  }
  .projects__repo-button {
    all: unset;
    font-size: 12px;
    background: rgba(0, 0, 0, 0.2);
    color: rgba(255, 255, 255, 0.8);
    border-radius: 15px;
    cursor: pointer;
    display: flex;
    padding: 5px;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    margin-bottom: -2px;
    height: calc(16px + 0.4rem);
  }
  .projects__repo-button:hover {
    color: white;
    background: rgba(0, 0, 0, 0.4);
  }
  @media (min-width: 700px) {
    .projects__list {
      flex-direction: row;
    }
    .projects__tags-list {
      font-size: 0.6rem;
    }
  }
</style>
