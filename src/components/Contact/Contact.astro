---
import Image from "astro/components/Image.astro";
import Motion from "../Motion/Motion";
import Github from "./icons/GrommetIconsGithub.svg";
import Mail from "./icons/LineMdEmail.svg";
import LinkedIn from "./icons/LogosLinkedinIcon.svg";
---

<Motion client:load>
  <section class="contact">
    <a class="contact__links" href="" target="_blank"
      ><Image src={LinkedIn} alt="Github" class="contact__icons" /> LinkedIn</a
    >
    <a class="contact__links" href="" target="_blank"
      ><Image src={Github} alt="Github" class="contact__icons" /> Github</a
    >
    <a class="contact__links" href="mailto:kontakt@willydev.de" target="_blank"
      ><Image src={Mail} alt="Github" class="contact__icons" /> E-Mail</a
    >
  </section>
</Motion>

<style>
  .contact {
    padding: 0 1rem;
    display: flex;
    gap: 1.5rem;
    font-size: 1.2rem;
  }
  .contact__links {
    all: unset;
    cursor: pointer;
    display: flex;
    gap: 4px;
    align-items: center;
    margin-bottom: 1rem;
    opacity: 0.8;
  }
  .contact__links:hover {
    color: rgb(var(--accent));
    opacity: 1;
  }
  .contact__links:active {
    color: rgb(var(--accent));
    opacity: 1;
  }
  .contact__icons {
    width: 24px;
    height: 24px;
    background-color: rgba(255, 255, 255);
    border-radius: 50%;
    padding: 2px;
  }
</style>
