---
import Image from "astro/components/Image.astro";
const { name, img } = Astro.props;
---

<li class="projects__tag">
  <Image src={img} alt={name} class="projects__tag-icon" />{name}
</li>

<style>
  .projects__tag {
    display: flex;
    align-items: center;
    padding: 0.4rem;
    background-color: color-mix(in srgb, white, transparent 85%);
    border-radius: 15px;
    gap: 3px;
  }
  .projects__tag-icon {
    width: 16px;
    height: 16px;
  }
</style>
