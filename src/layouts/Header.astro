---
import Divider from "../components/Divider/Divider.astro";
---

<header class="header">
  <svg
    class="header__code-background"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    stroke="#ffffff"
    ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
      id="SVGRepo_tracerCarrier"
      stroke-linecap="round"
      stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
      <path
        d="M15.5 9L15.6716 9.17157C17.0049 10.5049 17.6716 11.1716 17.6716 12C17.6716 12.8284 17.0049 13.4951 15.6716 14.8284L15.5 15"
        stroke="#FFFFFF"
        stroke-width="1.5"
        stroke-linecap="round"></path>
      <path
        d="M13.2942 7.17041L12.0001 12L10.706 16.8297"
        stroke="#FFFFFF"
        stroke-width="1.5"
        stroke-linecap="round"></path>
      <path
        d="M8.49994 9L8.32837 9.17157C6.99504 10.5049 6.32837 11.1716 6.32837 12C6.32837 12.8284 6.99504 13.4951 8.32837 14.8284L8.49994 15"
        stroke="#FFFFFF"
        stroke-width="1.5"
        stroke-linecap="round"></path>
      <path
        d="M22 12C22 16.714 22 19.0711 20.5355 20.5355C19.0711 22 16.714 22 12 22C7.28595 22 4.92893 22 3.46447 20.5355C2 19.0711 2 16.714 2 12C2 7.28595 2 4.92893 3.46447 3.46447C4.92893 2 7.28595 2 12 2C16.714 2 19.0711 2 20.5355 3.46447C21.5093 4.43821 21.8356 5.80655 21.9449 8"
        stroke="#FFFFFF"
        stroke-width="1.5"
        stroke-linecap="round"></path>
    </g></svg
  >
  <h1 class="header__headline">
    <span class="text-gradient">willyw.dev</span>
  </h1>
  <p class="header__job-title">
    <span>Software Developer</span><span>Full Stack Developer</span>
  </p>
</header>
<Divider />

<style>
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    color: white;
    font-size: 1.2rem;
    line-height: 1.6;
    width: 100%;
    overflow: hidden;
  }
  .header__code-background {
    position: absolute;
    width: 220px;
    height: auto;
    z-index: -1;
    opacity: 0.1;
    top: -12px;
    clip-path: none;
  }
  .header__headline {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .header__job-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 5px;
  }
</style>
